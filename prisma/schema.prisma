
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  passwordHash String
  role      Role     @default(WEB_DEVELOPER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  SENIOR_WEB_DESIGNER
  SENIOR_WEB_DEVELOPER
  WEB_DESIGNER
  WEB_DEVELOPER
  MARKETING_SPECIALIST
}
